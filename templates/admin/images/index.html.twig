{% extends "@admin/index.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>
                <a href="{{ path('admin_images_add') }}" class="btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </th>
            <th>Type</th>
            <th>Nom</th>
            <th>Commentaire</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('admin_images_edit', {id: item.id}) }}" class="btn-sm btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>{{ item.type }}</td>
                <td>{{ macro.image(item) }} {{ item.name }}</td>
                <td>{{ item.comment }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <span class="badge badge-light">{{ items|length }} images</span>
    </div>
{% endblock %}
