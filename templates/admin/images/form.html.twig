{% extends "@admin/index.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    {{ form_start(form) }}

    <div class="row">
        <div class="col">{{ form_row(form.name) }}</div>
        {% if form.vars.value.id == 0 and form.vars.value.type %}
            <div class="col">{{ form_row(form.type, { 'attr':{'disabled':'disabled'} }) }}</div>
        {% else %}
            <div class="col">{{ form_row(form.type) }}</div>
        {% endif %}
    </div>

    {{ form_widget(form) }}

    <div class="form-group">
        <button type="submit" class="btn-primary btn">{{ action }}</button>
        <a href="{{ breadcrumb.previous }}" class="btn-light btn">Annuler</a>
    </div>

    {{ form_end(form) }}

{% endblock %}
