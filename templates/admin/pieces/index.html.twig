{% extends "@admin/index.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>
                <a href="{{ path('admin_pieces_add') }}" class="btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </th>
            <th>Nome</th>
            <th>Réf.</th>
            <th>Année</th>
            <th>Qte</th>
            <th>Qte double</th>
            <th>Rech.</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('admin_pieces_edit', {id: item.id}) }}" class="btn-sm btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>{{ item.name }}</td>
                <td>{{ item.reference }}</td>
                <td>{{ item.year ?: '' }}</td>
                <td>{{ item.quantityOwned ?: ''}}</td>
                <td>{{ item.quantityDouble ?: '' }}</td>
                <td>{{ item.lookingFor ? 'X' : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <span class="badge badge-light">{{ items|length }} pièces</span>
    </div>
{% endblock %}