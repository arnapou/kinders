{% extends '@TetranzSelect2Entity/Form/fields.html.twig' %}

{% block tetranz_select2entity_widget_select_option %}
    <option value="{{ id }}" selected="selected"
            {% if label.file is defined %} data-file="{{ label|href }}"
            {% elseif label.image is defined and label.image.file is defined %} data-file="{{ label.image|href }}"
            {% endif %}
    >
        {{ label }}
    </option>
{% endblock %}
