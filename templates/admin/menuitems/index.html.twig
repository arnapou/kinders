{% extends "@admin/base.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    <table class="table table-striped table-sm table-hover">
        <thead class="thead-dark">
        <tr>
            <th>
                <a href="{{ path('admin_menuitems_add') }}" class="btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </th>
            <th>Menu item</th>
            <th>Category</th>
            <th>Sorting</th>
            <th>Years</th>
            <th>Attributes</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('admin_menuitems_edit', {id: item.id}) }}" class="btn-sm btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>{{ item.name }}</td>
                <td>{{ item.category }}</td>
                <td>{{ item.sorting }}</td>
                <td>
                    {% if item.minYear %}
                        {{ item.minYear }} &ndash; {{ item.maxYear }}
                    {% endif %}
                </td>
                <td>{{ macro.attributes(item) }}</td>
                <td>
                    <span type="button" data-href="{{ path('admin_menuitems_delete', {id: item.id}) }}" class="action-delete btn-sm btn-danger">
                        <i class="fas fa-times"></i>
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        {{ macro.pagination('pays') }}
    </div>
{% endblock %}
