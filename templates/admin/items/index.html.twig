{% extends "@admin/index.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>
                <a href="{{ path('admin_items_add') }}" class="btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </th>
            <th>Nom</th>
            <th>Réf.</th>
            <th>Année</th>
            <th>Collec</th>
            <th>Double</th>
            <th>Recherché ?</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('admin_items_edit', {id: item.id}) }}" class="btn-sm btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>{{ macro.image(item.image) }} {{ item.name }}</td>
                <td>{{ item.reference }}</td>
                <td>{{ item.year ?: '' }}</td>
                <td>{{ item.quantityOwned ?: ''}}</td>
                <td>{{ item.quantityDouble ?: '' }}</td>
                <td>
                    {% if item.lookingFor %}
                        <i class="fas fa-check"></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <span class="badge badge-light">{{ items|length }} items</span>
    </div>
{% endblock %}