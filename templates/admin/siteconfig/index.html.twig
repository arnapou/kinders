{% extends "@admin/base.html.twig" %}

{% import "@admin/macros.html.twig" as macro %}

{% block body %}
    {{ macro.breadcrumb() }}

    <table class="table table-striped table-sm table-hover">
        <thead class="thead-dark">
        <tr>
            <th></th>
            <th>Nom</th>
            <th>Contenu</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('admin_siteconfig_edit', {id: item.id}) }}" class="btn-sm btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>{{ item.name }}</td>
                <td>{{ item.description|raw }}</td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        {{ macro.pagination('configs') }}
    </div>
{% endblock %}
