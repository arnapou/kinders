{% macro breadcrumb() %}
    <nav aria-label="breadcrumb" style="margin-bottom: .5em; margin-top: .5em">
        <ol class="breadcrumb">
            {% for item in breadcrumb %}
                {% if not loop.last and item.url %}
                    <li class="breadcrumb-item"><a href="{{ item.url }}">{{ item.label }}</a></li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">{{ item.label }}</li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endmacro %}

{% macro image(item) -%}
    {%- spaceless %}
        {% if item and item.file is defined and item.file %}
            <a href="{{ vich_uploader_asset(item, 'diskFile') }}" target="_blank">
                <img src="{{ vich_uploader_asset(item, 'diskFile') }}" class="admin-image">
            </a>
        {% else %}
            <img src="{{ blank_img }}" class="admin-image-blank">
        {% endif %}
    {% endspaceless -%}
{%- endmacro %}

